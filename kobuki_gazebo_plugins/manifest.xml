<package>
  <description brief="ROS Gazebo plugins for Kobuki">

     Kobuki-specific ROS plugins for Gazebo
     The plugins in this package are not intended to be used alone, but through the launchers in kobuki_gazebo.

  </description>
  <author>Marcus Liebhardt</author>
  <license>BSD</license>
  <review status="experimental" notes=""/>
  <url>http://ros.org/wiki/kobuki_gazebo_plugins</url>

  <depend package="gazebo"/>
  <depend package="roscpp"/>
  <depend package="std_msgs"/>
  <depend package="nav_msgs"/>
  <depend package="geometry_msgs"/>
<!--   <depend package="sensor_msgs"/> -->
  <depend package="tf"/>
<!--   <depend package="bullet"/> -->
  <depend package="kobuki_msgs"/>
  
  <rosdep name="boost"/>
  <export>
    <gazebo plugin_path="${prefix}/lib" />
  </export>
</package>
