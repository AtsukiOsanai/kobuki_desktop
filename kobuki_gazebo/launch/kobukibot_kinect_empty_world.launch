<launch>
  <!-- start gazebo with an empty plane -->
  <param name="/use_sim_time" value="true" />
  <node name="gazebo" pkg="gazebo" type="gazebo" args="-u $(find kobuki_gazebo)/worlds/empty.world" respawn="false"/>
<!--   <node name="gazebo" pkg="gazebo" type="debug" args="-u $(find turtlebot_gazebo)/worlds/empty.world" respawn="false"/> -->
  <node name="gazebo_gui" pkg="gazebo" type="gui" />
    
  <!-- spawn the robot -->
  <include file="$(find kobuki_gazebo)/launch/robot.launch">
    <arg name="kinect" value="true"/>
  </include>
</launch>