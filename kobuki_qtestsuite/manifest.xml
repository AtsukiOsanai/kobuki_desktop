<package>
  <description brief="Graphical testsuite for kobuki">

     An rqt plugin that provides a graphical, interactive testsuite for kobuki.

  </description>
  <author>Daniel Stonier</author>
  <license>BSD</license>
  <review status="experimental" notes=""/>
  <url>http://ros.org/wiki/kobuki_qtestsuite</url>
  <export>
    <rqt_gui plugin="${prefix}/plugins/testsuite_plugin.xml"/>
  </export>
  <depend package="rospy"/>
  <depend package="kobuki_testsuite"/>
  <depend package="qt_gui_py_common"/>
  <depend package="rqt_gui"/>
  <depend package="rqt_gui_py"/>
  <depend package="rqt_py_common"/>
  <depend package="rqt_plot"/>
  
  <depend package="geometry_msgs"/>
  <depend package="nav_msgs"/>

  <rosdep name="pyqt4-dev-tools"/> <!-- pyrcc4 -->
</package>
